{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "..",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "baseUrl": "..",
        "paths": {
            "@/*": [
                "./*"
            ]
        }
    },
    "include": [
        "./**/*.ts",
        "../lib/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "drizzle.config.ts",
        "../lib/agent-intelligence-briefings.ts",
        "../lib/intelligence-briefing-system.ts",
        "../lib/documentParser.ts"
    ]
}